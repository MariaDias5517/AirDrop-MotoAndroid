<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFD"
    tools:context=".HelpActivity">

    <!-- CABEÇALHO -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/bg_header_gradient"
        android:paddingTop="24dp">

        <TextView
            android:id="@+id/tvHelpTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ajuda e Suporte"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tire suas dúvidas aqui"
            android:textColor="@color/blue_100"
            android:textSize="13sp" />
    </LinearLayout>

    <!-- CONTEÚDO PRINCIPAL -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Card principal -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card_white"
                android:padding="20dp"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/tvHelpSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Central de Ajuda"
                    android:textColor="@color/blue_900"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvHelpDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aqui você encontra informações e orientações sobre como usar o aplicativo, tirar dúvidas e entrar em contato com o suporte técnico."
                    android:textColor="@color/text_secondary"
                    android:textSize="15sp"
                    android:layout_marginBottom="16dp" />

                <!-- Dúvidas frequentes -->
                <TextView
                    android:text="Dúvidas frequentes"
                    android:textColor="@color/blue_900"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvFaq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Como usar o aplicativo?\n• Como transferir arquivos?\n• Quais tipos de arquivo são suportados?\n• O que fazer se a transferência falhar?\n• Como conectar dispositivos?"
                    android:textColor="@color/text_secondary"
                    android:textSize="15sp"
                    android:lineSpacingExtra="4dp" />

                <!-- Botão de contato -->
                <LinearLayout
                    android:id="@+id/btnContato"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_button_gradient"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_marginTop="24dp"
                    android:elevation="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Entrar em Contato"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Rodapé -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Versão 1.0.0"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp" />
        </LinearLayout>
    </ScrollView>

    <!-- BOTÃO VOLTAR FLUTUANTE -->
    <ImageView
        android:id="@+id/btnVoltar"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/ic_back"
        android:contentDescription="Voltar"
        android:background="@drawable/bg_circle_transparent" />

</RelativeLayout>