<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light"
    tools:context=".SobreActivity">

    <!-- CABEÇALHO GRADIENTE -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/bg_header_gradient"
        android:paddingTop="24dp">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/chatgpt_image_20_de_set__de_2025__13_06_48"
            android:contentDescription="Logo"
            android:background="@drawable/bg_button_gradient"
            android:padding="12dp" />

        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FlashDrop"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transferência rápida de arquivos"
            android:textColor="@color/blue_100"
            android:textSize="13sp" />
    </LinearLayout>

    <!-- CONTEÚDO -->
    <ScrollView
        android:id="@+id/scroll"
        android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- CARD PRINCIPAL -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card_white"
                android:padding="18dp"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/tvSobreTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sobre o FlashDrop"
                    android:textColor="@color/blue_900"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSobreDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FlashDrop é um aplicativo criado para facilitar o envio e recebimento rápido de arquivos entre dispositivos próximos usando Wi-Fi Direct e Bluetooth. Sem internet, rápido e seguro."
                    android:textColor="@color/text_secondary"
                    android:textSize="15sp"
                    android:layout_marginTop="8dp"/>



                <!-- Linha ação (Compartilhar/Contato/Site) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:weightSum="3">

                    <LinearLayout
                        android:id="@+id/btnCompartilhar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_share"
                            android:contentDescription="Compartilhar"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Compartilhar"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="6dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btnContato"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_email"
                            android:contentDescription="Contato"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contato"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="6dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btnSite"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_website"
                            android:contentDescription="Site"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Site"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="6dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- SEÇÃO CREDITS / VERSÃO -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="14dp"
                android:padding="12dp">

                <TextView
                    android:id="@+id/tvVersao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Versão 1.0.0"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tvCredits"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Desenvolvido por Maria e Débora — Projeto acadêmico. © 2025"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- BOTÃO VOLTAR FLUTUANTE (no topo, sobre o header) -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/ic_back"
        android:contentDescription="Voltar"
        android:background="@drawable/bg_circle_transparent"
        />
</RelativeLayout>
