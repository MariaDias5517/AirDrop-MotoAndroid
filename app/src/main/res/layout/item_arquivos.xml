<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:layout_marginHorizontal="8dp"
    card:cardCornerRadius="12dp"
    card:cardElevation="4dp"
    card:cardBackgroundColor="#D9D9D9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Ãcone do lado esquerdo -->
        <ImageView
            android:id="@+id/iconTipo"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="12dp"
            android:contentDescription="@string/icon_tipo"
            android:tint="#F59C24"
            tools:ignore="MissingPrefix,UseAppTint" />

        <!-- Nome e tamanho do arquivo -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/nomeArquivo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nome.ext"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tamanhoArquivo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X MB"
                android:textSize="14sp"
                android:textColor="#666666" />
        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>
