<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light"
    tools:context=".HistoricoActivity">

    <!-- CABEÇALHO GRADIENTE -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/bg_header_gradient"
        android:paddingTop="16dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_history" />

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Histórico"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Envios e recebimentos recentes"
            android:textColor="@color/blue_100"
            android:textSize="14sp"/>

        <!-- Indicador de swipe -->
        <TextView
            android:id="@+id/txtSwipeHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="← Arraste para ações →"
            android:textColor="@color/blue_100"
            android:textSize="12sp"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

    <!-- RECYCLERVIEW para listagem -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewHistorico"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_above="@+id/bottomBar"
        android:padding="16dp"
        android:clipToPadding="false"
        android:background="@color/bg_light"/>

    <!-- RODAPÉ -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:elevation="8dp">

        <ImageButton
            android:id="@+id/btnHistoricoImg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_historico"
            android:background="@android:color/transparent"
            app:tint="#3A7BFB"
            android:contentDescription="Botão de histórico"/>

        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:background="@android:color/transparent"
            app:tint="#66000000"
            android:contentDescription="Botão Home"/>

        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_settings"
            android:background="@android:color/transparent"
            app:tint="#66000000"
            android:contentDescription="Botão de configurações"/>

    </LinearLayout>

</RelativeLayout>